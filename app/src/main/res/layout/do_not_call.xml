<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ededed">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ff0000"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_gravity="center"
        android:text="Be carefull, I found the following on the 'do not call' list:"/>
    <TextView
        android:id="@+id/companyName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:text = "Berman Furniture"
        />
    <TextView
        android:id="@+id/contactName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text = "John Appleton"
        />
    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text = "416-716-9023"
        />
    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:textSize="16sp"
        android:text = "john@bermafurniture"
        />
    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:textSize="16sp"
        android:text = "134 John St, Toronto, ON"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#000"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        >

        <Button
            android:id="@+id/save"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save anyways"
            android:textColor="#547dbf"
            />
        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_gravity="center"
            android:background="#000"
            />

        <Button
            android:id="@+id/cancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel this prospect"
            android:textColor="#547dbf"
            />
    </LinearLayout>

</LinearLayout>